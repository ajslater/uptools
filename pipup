#!/bin/bash
# Updates python packages
set -euo pipefail

BOLD=$(tput bold)
NORMAL=$(tput sgr0)
title() {
  echo "${BOLD}Updating $*:${NORMAL}"
}

title "python3"
pip3 install -U pip
pip-review --auto

# If only pip was as sophisticated as apt
echo "${BOLD}Fix poetry${NORMAL}"
pip3 install -U poetry

#title "python2"
#pip-review2 --auto
