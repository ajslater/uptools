#!/bin/bash
# update all perl packages
set -uo pipefail

source uptitle

title perl
# Lazy auto install of cpanm-outdated, as it is occasionally uninstalled by
# something
cpanm App::cpanoutdated | grep -v "App::cpanoutdated is up to date." || true
BREW_PREFIX=$(brew --prefix)
# shellcheck disable=SC2086
ln -sf $BREW_PREFIX/Cellar/perl/*/bin/cpan-outdated /usr/local/bin/

# Only update if there are things to update.
while IFS='' read -r line; do PACKAGES+=("$line"); done < <(cpan-outdated)
if [ ${#PACKAGES[@]} ]; then
  set -x
  cpanm "${PACKAGES[@]}"
else
  echo Perl is up to date.
fi
